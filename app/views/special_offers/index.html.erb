<p id="notice"><%= notice %></p>

<h1>Special Offers</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Discount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @special_offers.each do |special_offer| %>
      <tr>
        <td><%= special_offer.title %></td>
        <td><%= special_offer.description %></td>
        <td><%= special_offer.discount %></td>
        <td><%= link_to 'Show', special_offer %></td>
        <td><%= link_to 'Edit', edit_special_offer_path(special_offer) %></td>
        <td><%= link_to 'Destroy', special_offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Special Offer', new_special_offer_path %>
